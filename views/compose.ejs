
<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
    <h2>Delete</h2>
    <form class="" action="/compose/Delete" method="post">
      <div class="form-group">
        <label>Post ID</label>
        <input class="form-control" type="text" name="postID">
      </div>
      <button class="btn btn-primary" type="submit" name="button">Delete</button>
    </form>

<%- include("partials/footer"); -%>
